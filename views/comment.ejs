<br />
<% post.comments.forEach(function (comment, index) { %>
  <p><a href="<%= comment.website %>"><%= comment.name %></a>
  <span class="info"> 回复于 <%= comment.time %></span></p>
  <p><%- comment.content %></p>
<% }) %>
<form method="post" class="form-horizontal" role="form">
<% if (user) { %>
  <div class="form-group">
    <label class="col-md-1 control-label">姓名:</label>
    <div class="col-md-4">
      <input name="name" class="form-control" value="<%= user.name %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-1 control-label">邮箱:</label>
    <div class="col-md-4">
      <input name="email" type="email" class="form-control" value="<%= user.email %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-1 control-label">网址:</label>
    <div class="col-md-4">
      <input name="website" class="form-control" value="/u/<%= user.name %>">
    </div>
  </div>

<% } else { %>
  <div class="form-group">
    <label class="col-md-1 control-label">姓名:</label>
    <div class="col-md-4">
      <input name="name" class="form-control" placeholder="请输入名字">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-1 control-label">邮箱:</label>
    <div class="col-md-4">
      <input name="email" type="email" class="form-control" placeholder="请输入邮箱">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-1 control-label">网址:</label>
    <div class="col-md-4">
      <input name="website" class="form-control" placeholder="个人网址">
    </div>
  </div>
<% } %>
  <div class="form-group">
    <label class="col-md-1 control-label">评论:</label>
    <div class="col-md-4 ">
      <textarea name="content" class="form-control" rows="5" cols="10"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <button type="submit" class="btn btn-primary">留言</button>
    </div>
  </div>
</form>