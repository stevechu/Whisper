<%- include header %>
<div style="margin-top:80px">
<h2><%= post.title %></h2>
</div>
<% if(user.name == post.name){ %>
<a class="btn btn-primary" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a>
<a  id="removePost" class="btn btn-danger" >删除</a>
<% } %>
<p >
  作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
  日期：<%= post.time.minute %>
</p>
<%- post.post %>
<%- include footer %>